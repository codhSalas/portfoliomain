function cacheMiddleware(duration) {
  return (req, res, next) => {
    const key = req.originalUrl;
    const cached = htmlCache.get(key);
    
    if (cached) {
      return res.send(cached); // ⚡ Instant
    }
    
    // Génère et cache le HTML
    next();
  };
}

// Route avec cache
